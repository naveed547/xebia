{
  "name": "xebia-project",
  "version": "1.0.0",
  "description": "Xebia Project",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --mode development --port 3000 --hotOnly --config react.dev.config.js",
    "build": "webpack --mode production --env production --config react.prod.config.js",
    "lint": "./node_modules/.bin/tslint src/**/*.ts --fix",
    "test": "jest --updateSnapshot --passWithNoTests",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "Naveed",
  "license": "ISC",
  "dependencies": {
    "@babel/preset-react": "^7.0.0",
    "bootstrap": "^4.1.3",
    "font-awesome": "^4.7.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/register": "^7.0.0",
    "@types/bootstrap": "^4.2.2",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-fontawesome": "^1.6.4",
    "@types/react-router-dom": "^4.3.1",
    "@types/webpack-env": "^1.13.6",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "clean-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "3.2.0",
    "jest": "^23.6.0",
    "identity-obj-proxy": "^3.0.0",
    "sass-loader": "^7.0.3",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.0",
    "tslint": "^5.14.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14",
    "react-test-renderer": "^16.0.0-alpha.12",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "@types/chai": "^4.1.7",
    "@types/enzyme": "^3.1.15",
    "node-sass": "^4.13.1"
  },
  "tslintConfig": {
    "extends": [
      "tslint:latest",
      "tslint-react"
    ],
    "linterOptions": {
      "exclude": [
        "node_modules/",
        "server/",
        "distr/"
      ]
    },
    "rules": {
      "interface-name": false,
      "indent": false,
      "object-literal-sort-keys": false,
      "ban-types": false
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "setupFiles": [
      "<rootDir>/jest/test-shim.js",
      "<rootDir>/jest/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "css",
      "scss",
      "less",
      "sass"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/jest/test-preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/src/**/*/?(*.)(spec|test).{js,jsx,mjs,tsx}",
      "<rootDir>/**/?(*.)(spec|test).{js,jsx,mjs,tsx}"
    ],
    "moduleNameMapper": {
      "^Components(.*)$": "<rootDir>/src/components$1",
      "^Containers(.*)$": "<rootDir>/src/containers$1",
      "^Styles(.*)$": "<rootDir>/src/styles$1",
      "^Api(.*)$": "<rootDir>/src/api$1",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/jest/__mocks__/fileMock.js"
    }
  }
}
